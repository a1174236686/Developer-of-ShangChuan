/* pages/find/find.wxss */
.main{
  padding: 0 30rpx;
}

.screen{
  position: fixed;
  width: 88%;
  z-index: 1;
  padding: 8px 10px;
  background-color: white;
}

/* 输入框 */
.input-box{
  display: flex;
  align-items: center;
  width: 100%;
  background-color: #F5F5F6;
  border-radius: 40rpx;
  overflow:hidden;
  font-size: 22rpx;
}


.input-box input{
   background-color: #F5F5F6;
   width: 100%;
   height: 60rpx;
    padding-left: 32rpx;
}

/* icon */
.input-icon{
  width: 32rpx;
  height: 28rpx;
  margin-left: auto;
  margin-right: 24rpx;
}

.miscellaneous{
  display: flex;
}

.miscellaneousLeft{
  width: 50%;
}

.miscellaneousRight{
  width: 50%;
  margin-left: 30rpx;
}

.box{
  position: relative;
  margin-top: 20rpx;
}

.box image{
  width: 100%;
  border-radius: 20rpx;
}

.box .text{
  position: absolute;
  left: 40%;
  top: 45%;
  color: #fff;
  font-weight: bold;
}