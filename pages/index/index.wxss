/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.main{
  /* padding: 30rpx; */
  color: #333;
}

.tab{
  display: flex;
  padding: 0 30rpx;
}

.tab text{
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 0 15rpx;
  background-color: #F7F4F8;
  border-radius: 30rpx;
  margin-right: 20rpx;
  font-size: 25rpx;
  color: #BAB7BA;
  font-weight: bold;
}

.tab .active{
  background-color: #FE6D77;
  color: #fff;
}

.imgTextList{
  margin-top: 10rpx;
  padding: 30rpx;
  background-color: #FBFAFD;
}

.imgTextItem{
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0px 3px 2px #f2f2f2;
  margin-bottom: 30rpx;
}

.imgText_img{
  width: 100%;
  height: 500rpx;
  border-radius: 20rpx;
}

.imgText_text{
  display: flex;
}

.imgText_portrait{
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  margin: 10rpx 15rpx 30rpx;
}

.imgText_name{
  display: flex;
  flex-direction: column;
  margin-top: 14rpx;
}

.imgText_name .data{
  font-size: 26rpx;
  color: #ccc;
}

.imgText_operation{
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 30rpx;
}

.imgText_operation image{
  width: 32rpx;
  height: 32rpx;
  margin-left: 30rpx;
}


