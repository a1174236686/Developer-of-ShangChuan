.container {
  padding: 30rpx;
  font-family: PingFang;
}

.top image {
  width: 690rpx;
  height: 300rpx;
  border-radius: 12rpx;
}

.form {
  display: block;
  width: 690rpx;
}

.form .formCard {
  margin-top: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: rgba(0, 0, 0, .2) 0 0 10rpx 1rpx;
}

.form .item {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(192, 192, 192, 0.5);
}

.form .item .itemLabel {
  font-size: 26rpx;
  font-family: PingFang-SC-Bold;
  color: #333333;
}

.form .item input {
  flex: 1;
  text-align: right;
  margin-left: 30rpx;
}

.form .item .formItemInputPlaceholder {
  font-size: 30rpx;
  color: darkgrey;
}

.form .IDImgCtn {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
}

.form .IDImgCtn .IDImgItem {
  border-radius: 12rpx;
  padding: 40rpx;
  box-shadow: rgba(0, 0, 0, .2) 0 0 10rpx 1rpx;
}

.form .IDImgCtn .IDImgItem image {
  width: 227rpx;
  height: 148rpx;
}

.form .Submit {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.form .Submit .btn {
  border-radius: 24rpx;
  background-color: #FF6D77;
  color: white;
  width: 690rpx;
}

.img {
  width: 32rpx;
  height: 32rpx;
}