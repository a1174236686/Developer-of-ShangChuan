.container{
  padding: 30rpx;
}

.top image{
  width: 690rpx;
  height: 300rpx;
  border-radius: 12rpx;
}

.form{
  display: block;
  width: 690rpx;
}

.form .formCard{
  margin-top: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow:rgba(0,0,0,.2) 0 0 10rpx 1rpx ;
}

.form .item{
  height: 100rpx;
  display: flex;
  align-items:center;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(192,192,192,0.5);
}

.form .item .itemLabel{
  font-size: 30rpx;
  font-weight:bold;
}

.form .item input{
  width: 300rpx;
}

.form .item .formItemInputPlaceholder{
  font-size: 30rpx;
  color: darkgrey;
}

.form .IDImgCtn{
  margin-top: 60rpx;
  display:flex;
  justify-content: space-between;
}

.form .IDImgCtn .IDImgItem{
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow:rgba(0,0,0,.2) 0 0 10rpx 1rpx ;
}

.form .IDImgCtn .IDImgItem image{
  width: 220rpx;
  height: 200rpx;
}

.form .Submit{
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.form .Submit .btn{
  border-radius: 24rpx;
  background-color: pink;
  color:white;
  width: 690rpx;
}