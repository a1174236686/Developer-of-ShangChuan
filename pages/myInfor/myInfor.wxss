/* pages/myInfor/myInfor.wxss */
.infoList{
  padding: 30rpx 0;
}

.infoItem{
  padding: 0 30rpx;
  display: flex;
  font-size: 28rpx;
  align-items: center;
  font-weight: bold;
  justify-content: space-between;
  height: 88rpx;
  border-bottom: 1rpx solid #f8f8f8;
}

.infoItem .infoItemImg{
  width: 42rpx;
  height: 40rpx;
}

.infoItemLeft{
  display: flex;
  align-items: center;
}

.infoItem label{
  margin-left: 22rpx;
}

.infoItem .editInput{
  color: #333;
}

.infoItem input{
  color: #999999;
  text-align: right;
}

.itemRight{
  flex: 1;
  text-align: right;
}

.bordetBottom{
  border-bottom: 10rpx solid #f5f5f5;
}

.btnPosition{
  margin: 0 30rpx;
  height:88rpx;
  width: 92%;
  position: fixed;
  bottom: 40rpx;
}

.switchBtn{
  width: 100% !important;
  height: 88rpx;
  background:rgba(255,109,119,1);
  border-radius:20rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  font-weight: bold;
  padding: 0;
  margin: 0;
}
.headPhoto{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.img {
  width: 32rpx;
  height: 32rpx;
}