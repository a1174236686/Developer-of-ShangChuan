/* pages/myWallet/myWallet.wxss */

.cardInfo{
  width: 100%;
  position: relative;
}

.cardInfoBg{
  width: 100%;
  height: 480rpx;
}

.info{
  position: absolute;
  padding: 86rpx 0 86rpx 86rpx;
  top: 0;
  left: 0;
  color: #fff;
}

.infoTitle{
  font-size: 30rpx;
  margin-top: 20rpx;
}
.infoMoney{
  display: flex;
  padding: 50rpx 0;
  align-items: center;
}

.infoMoney_money{
  font-size: 76rpx;
}

.infoMoney_option{
  margin: 0 10rpx 0 107rpx;
}

.infoMoney > icon{
  margin-top: 5px;
}

.infoProfit{
  display: flex;
  font-size: 24rpx;
}

.detailedList{
  padding: 0 42rpx;
  /* background-color: #f8f8f8; */
}

.detailedTitle{
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 50rpx;
}

.detailedItem{
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0px 10rpx 20rpx 20rpx #e2e2e2;
  margin-bottom: 20rpx;
}

.detailedItem > view{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detailedItem_top{
  margin-bottom: 30rpx;
}

.detailedItem_top > view:first-child{
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
}

.detailedItem_top > view:last-child{
  color: #FE3F10;
}

.detailedItem_bottom{
  color: #808080;
  font-size: 28rpx;
}
