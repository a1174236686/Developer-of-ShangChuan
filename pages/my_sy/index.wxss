/* 总榄 */

.content .top-box{
  padding: 0  30rpx;
  display: flex;    
  align-items: center;
  justify-content: space-between;
}
/* 地址 */
.address{
   display: flex;
   align-items: center;
}
.address >image{
  width:24rpx ;
  height: 12rpx;
  margin: 0 16rpx;
}

/* 输入框 */
.input-box{
  display: flex;
  align-items: center;
  width: 80%;
  background-color: #F5F5F6;
  border-radius: 40rpx;
  overflow:hidden;
  font-size: 22rpx;
}


.input-box input{
   background-color: #F5F5F6;
   width: 100%;
   height: 60rpx;
    padding-left: 32rpx;
}

/* icon */
.input-icon{
  width: 32rpx;
  height: 28rpx;
  margin-left: auto;
  margin-right: 24rpx;
}

.ban-conten{
  height: 420rpx;
}

.region{
  height: 64rpx;
  border: 1rpx solid #F0F0F0;
  display: flex;
  line-height: 64rpx;
  font-size: 28rpx;
  align-items: center;
  padding: 0 80rpx;
  color: #FF6D77;
  font-weight: bold;
}

.region image{
  width: 16rpx;
  height: 10rpx;
  margin-left: 10rpx;
}

.syList{
  margin-top: 20rpx;
}

.syItem{
  display: flex;
  margin-bottom: 24rpx;
}

.syIcon{
  margin: 0 16rpx 0 24rpx;
}

.syIcon image{
  width: 193rpx;
  height: 263rpx;
  border-radius: 20rpx;
}

.syInfo{
  flex: 1;
}

.syInfo > view{
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}

.infoTtile{
  font-size: 32rpx;
  font-weight: bold;
}

.titleLabel{
  padding: 0 12rpx;
  height: 35rpx;
  line-height: 35rpx;
  background-color: #FAE8C4;
  border-radius: 4rpx;
  font-size: 20rpx;
  color: #9F6B32;
  margin-left: 20rpx;
}

.score view:first-child{
  color: #F62020;
  font-size: 30rpx;
  margin-right: 8rpx;
  font-weight: bold;
}

.score view:last-child{
  color: #ccc;
  font-size: 22rpx;
  margin-top: 6rpx;
}

.syLabel > view{
  font-size: 18rpx;
  height: 30rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ED2B2B;
  padding: 0 6rpx;
  color: #ED2B2B;
  line-height: 26rpx;
  margin-right: 13rpx;
}

.syAddress{
  border-bottom: 1rpx solid #F5F5F5;
}

.syAddress image{
  width: 44rpx;
  height: 50rpx;
}

.addressText{
  font-size: 22rpx;
  color: #ccc;
  flex: 1;
}

.makeBtn{
  width: 144rpx;
  height: 50rpx;
  background-color: #FF6D77;
  border-radius: 40rpx;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 30rpx;
}

.BecomeVip{
  position: fixed;
  bottom: 100rpx;
  right: 20rpx;
}

.BecomeVip image{
  width: 120rpx;
  height: 120rpx;
}

.showDate{
  position: relative;
  height: 1000rpx;
}
