<view class="mian">
  <view class="userInfo">
    <image class="userInfo_bg" src="../../img/toux.jpg"></image>
    <view class="userInfo_title">
      <view class="userInfo_NameImg">
        <image src="../../img/toux.jpg"></image>
        <view>sunny</view>
        <icon type="success" size="20"></icon>
      </view>
      <view class="userCount">
        <view>作品：350</view>
        <view class="userCount_line"></view>
        <view>点评：350</view>
      </view>
      <view class="numInfo">
        <view class="numInfo_title">
          <view>程潇潇摄影师</view>
          <view>高级摄影师</view>
        </view>
        <view class="score">
          <view>5.0</view>
          <view>评分</view>
        </view>
        <view class="countScore">
          <view>总评分：</view>
          <view>星星组件</view>
        </view>
      </view>
    </view>
  </view>
  <view class="infoBottom">
    <view class="top">
      <view class="topLeft">
        <view wx:for="{{tarList}}" wx:key="index" class="{{currentType === item.type ? 'active' : ''}}" bindtap="switchBar" data-type="{{item.type}}">
          {{item.name}}<label></label>
        </view>
      </view>
      <view class="topBtn">管理</view>
    </view>
    <view class="imgList">
      <view wx:for="{{videoList}}" class="item {{(index + 1) % 2 === 0 ? 'noMargin' : ''}}" wx:key="item">
        <image class="video" src="../../img/toux.jpg"></image>
        <view class="videoName">这里是影片名称</view>
        <view class="author">
          <view>Wyman</view>
          <view>评分：9.0</view>
        </view>
      </view>
    </view>
  </view>
  <view class="addWorks">+</view>
  <view class="mask">
    <view class="maskboX">
      <view>
        <image></image>
        <image>视频</image>
      </view>
      <view>
        <image></image>
        <image>视频</image>
      </view>
    </view>
  </view>
</view>

