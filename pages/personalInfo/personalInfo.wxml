<!--pages/personalInfo/personalInfo.wxml-->
<!--pages/myUser/myUser.wxml-->
<view class="mian">
  <view class="userInfo">
    <image class="userInfo_bg" src="{{biPhotographer.avatarUrl}}"></image>
    <view class="userInfo_title">
      <view class="userInfo_NameImg">
        <image src="{{biPhotographer.avatarUrl}}"></image>
        <view>sunny</view>
        <icon type="success" size="20"></icon>
      </view>
      <view class="userCount">
        <view>作品：350</view>
        <view class="userCount_line"></view>
        <view>点评：350</view>
      </view>
      <view class="numInfo">
        <view class="numInfo_title">
          <view>{{biPhotographer.name}}</view>
          <view>{{biPhotographer.level}}</view>
        </view>
        <view class="score">
          <view>{{biPhotographer.score}}</view>
          <view>评分</view>
        </view>
        <view class="countScore">
          <view>总评分：</view>
          <view><rate disabled score="{{biPhotographer.total_score}}" /></view>
        </view>
      </view>
    </view>
  </view>
  <view class="infoBottom">
    <view class="top">
      <view class="topLeft">
        <view wx:for="{{tarList}}" wx:key="index" class="{{currentType === item.type ? 'active' : ''}}" bindtap="switchBar" data-type="{{item.type}}">
          {{item.name}}<label></label>
        </view>
      </view>
      <view class="topBtn">管理</view>
    </view>
    <view class="imgList" hidden="{{currentType!=1}}">
      <view wx:for="{{videoList}}" class="item {{(index + 1) % 2 === 0 ? 'noMargin' : ''}}" wx:key="item">
        <video class="video" src="http://106.12.205.91:9000/sheying/sys/file/previewImg?fileName={{item.fileName}}" controls ></video>
        <view class="videoName">{{item.workName}}</view>
        <view class="author">
          <view>Wyman</view>
          <view>评分：{{item.score}}</view>
        </view>
      </view>
    </view>
    <view class="imgList" hidden="{{currentType!=2}}">
      <view wx:for="{{imgList}}" class="item {{(index + 1) % 2 === 0 ? 'noMargin' : ''}}" wx:key="item">
        <image class="video" src="http://106.12.205.91:9000/sheying/sys/file/previewImg?fileName={{item.fileName}}"></image>
        <image class="deleteIcon" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"></image>
      </view>
    </view>
  </view>
  <view class="addWorks" bindtap="uploadWork">+</view>
</view>

