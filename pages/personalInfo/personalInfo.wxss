/* pages/personalInfo/personalInfo.wxss */

page{
  background-color: #f5f5f5;
}

.userInfo{
  position: relative;
}

.userInfo_bg{
  width: 100%;
  height: 400rpx;
  opacity: .8;
}

.userCount{
  position: absolute;
  display: flex;
  left: 110rpx;
  top: 60%;
  color: #fff;
  align-items: center;
}

.userCount_line{
  height: 30rpx;
  width: 2rpx;
  background-color: #fff;
  margin: 0 30rpx
}

.userInfo_title{
  position: absolute;
  top: 0;
  display: flex;
  z-index: 1;
  width: 100%;
  height: 100%;
}

.userInfo_NameImg{
  display: flex;
  align-items: center;
  position: absolute;
  width: 100%;
  height: 120rpx;
  top: 20%;
}

.userInfo_NameImg > image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 0 40rpx 0 100rpx;
}

.userInfo_NameImg > view{
  font-size: 50rpx;
  color: #fff;
}

.userInfo_NameImg > icon{
  position: relative;
  top: -100rpx;
  right: -240rpx;
  z-index: 1;
}

.numInfo{
  position: absolute;
  margin: 0 30rpx;
  bottom: -210rpx;
  background-color: #fff;
  width: 92%;
  height: 240rpx;
  left: 0;
  box-shadow:0px 11px 26px 0px rgba(212,212,212,0.28);
  border-radius:20px;
  padding: 30rpx 0;
}

.numInfo > view{
  padding: 0 38rpx;
  display: flex;
  align-items: center;
}

.numInfo_title view:first-child{
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 15rpx;
}

.numInfo_title view:last-child{
  padding: 0 12rpx;
  height: 35rpx;
  line-height: 35rpx;
  background-color: #FAE8C4;
  border-radius: 4rpx;
  font-size: 20rpx;
  color: #9F6B32;
}

.score{
  margin: 40rpx 0;
}

.score view:first-child{
  color: #F62020;
  font-size: 42rpx;
  margin-right: 8rpx;
  font-weight: bold;
}

.score view:last-child{
  color: #ccc;
  font-size: 22rpx;
  margin-top: 6rpx;
}

.countScore view:first-child{
  font-size: 22rpx;
  color: #ccc;
}

.infoBottom{
  margin-top: 240rpx;
  padding: 0 30rpx;
}

.infoBottom .top{
  display: flex;
  margin-bottom: 20rpx;
  justify-content: space-between;
  align-items: center;
}

.topLeft{
  display: flex;
  font-size: 26rpx;
  color: #B1B1B1;
  align-items: flex-end;
}

.topLeft > view{
  margin-right: 32rpx;
}

.active{
  position: relative;
  font-weight: bold;
  font-size: 34rpx;
  color: #333;
}

.active label{
  width: 30rpx;
  height: 6rpx;
  background:rgba(254,68,80,1);
  border-radius: 10px;
  position: absolute;
  bottom: -20rpx;
  left: 20%;
}

.topBtn{
  background:linear-gradient(0deg,rgba(255,119,128,1),rgba(254,68,80,1));
  border-radius: 40rpx;
  padding: 6rpx 40rpx;
  color: #fff;
  margin-right: 20rpx;
}

.imgList{
  margin: 50rpx 0 40rpx;
  display: flex;
  flex-wrap: wrap;
}

.item{
  width: 330rpx;
  margin-right: 24rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding-bottom: 20rpx;
}

.item .video{
  width: 100%;
  height: 315rpx;
  border-radius: 20rpx 20rpx 0  0;
}

.noMargin{
  margin-right: 0;
}

.videoName{
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
  padding: 16rpx 0;
  margin-left: 20rpx;
}

.author{
  display: flex;
  color: #999999;
  font-size: 24rpx;
  justify-content: space-between;
  margin: 0 20rpx;
}

.addWorks{
  position: fixed;
  width: 108rpx;
  height: 108rpx;
  line-height: 90rpx;
  background-color: #FE5560;
  bottom: 40rpx;
  text-align: center;
  color: #fff;
  font-weight: bold;
  left: 42%;
  border-radius: 50%;
  font-size: 100rpx;
}

