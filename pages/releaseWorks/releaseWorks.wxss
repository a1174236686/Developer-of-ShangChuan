/* pages/releaseWorks/releaseWorks.wxss */
.main{
  padding: 32rpx;
  position: relative;
}

.text{
  font-size: 30rpx;
}

.addBth{
  width: 222rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  color: #E5E5E5;
  font-size: 120rpx;
  border: 4rpx dashed #E5E5E5;
}

.imgbox{
  display: flex;
  position: relative;
}

.clioneImg{
  position: relative;
}

.imgbox .media{
  width: 222rpx;
  height: 200rpx;
  margin-right: 10rpx;
}

.close{
  position: absolute;
  top: -20rpx;
  color: #fff;
  right: 8rpx;
  font-size: 60rpx;
  transform: rotate(45deg);
}


.withdrawalBtn{
  text-align: center;
  background-color: #FF6D77;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  border-radius: 20rpx;
  margin-top: 400rpx;
}