/* pages/myOrder/myOrder.wxss */
page{
  background-color: #f5f5f5;
}

.switchTab{
  background-color: #fff;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
}

.switchTab > view{
  flex: 1;
  text-align: center;
  color: #B1B1B1;
  font-size: 30rpx;
  font-weight: bold;
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
}

.orderList{
  margin-top: 100rpx;
}

.switchTab .active{
  width:27rpx;
  height:6rpx;
  background:rgba(254,68,80,1);
  border-radius:3rpx;
  position: absolute;
  bottom: 0;
  left: 43%;
}

.switchTab .colorActive{
  color: #FE4450;
}

.orderItem{
  margin-top: 10rpx;
  background-color: #fff;
  padding: 28rpx 32rpx;
  position: relative;
}

.orderItem_name{
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #E7E7E7;
  padding-bottom: 30rpx;
}

.orderItem_name_Head{
  border-radius: 50%;
  width: 106rpx;
  height: 106rpx;
}

.orderItem_name_Text{
  font-size: 34rpx;
  font-weight: bold;
  padding: 0 17rpx 0 28rpx;
}

.orderItem_name_Call{
  width: 50rpx;
  height: 50rpx;
  background-color: #FF6D77;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.orderItem_name_Call image{
  width: 38rpx;
  height: 38rpx;
}

.orderItem_Time{
  display: flex;
  color: #B1B1B1;
  font-size: 24rpx;
  margin-top: 24rpx;
}

.orderItem_Time label{
  font-weight: bold;
  color: #333;
  font-size: 26rpx;
}

.orderItem_Customer{
  position: absolute;
  display: flex;
  width: 100%;
  bottom: 50rpx;
  right: 30rpx;
  justify-content: flex-end;
}

.orderItem_Customer_right{
  display: flex;
  align-items: center;
  position: relative;
  top: 30rpx;
}

.orderItem_Customer_right view{
  margin-left: 17rpx;
  width: 154rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 40rpx;
  background-color: #FF6D77;
  color: #fff;
  font-size: 28rpx;
}

.orderItem_Customer_right .orderItem_Customer_cancel{
  background-color: #fff;
  color: #999999;
  border: 1rpx solid rgba(153,153,153,1);
}

.orderItem_name_wait{
  flex: 1;
  font-size: 28rpx;
  color: #FE4450;
  font-weight: bold;
  text-align: right;
}

.nodata{
  padding-top: 100rpx;
  display: flex;
  justify-content: center;
}

/* 二维码 显示*/
.modal-view{
  position: absolute;
  top: 0;
 width: 100%;
 height: 100vh;
 background-color:rgba(0, 0, 0, 0.3);
 z-index: 999;
}
.modal-view .modal{
 width: 200px;
 height: 200px;
 background-color: #fff;
 margin: 100px auto;
 border: 1px solid #ccc;
 border-radius: 15rpx;
}
.modal-view .modal .title{
height: 30px;
text-align: center;
}
.modal-view .canvas{
width: 150px;
background-color: #fff;
margin: 0 auto;
display: block;
}